EVENT time_pass
  DEPENDING ON RANDOM 1 to 3
    = 1 THEN "$pThe time for the big game is getting nearer."
    = 2 THEN "$pDon't let time get away from you!"
    = 3 THEN "$pThe clock is ticking..."
  END DEPEND.
  SCHEDULE time_pass AT Hero AFTER RANDOM 4 to 6.
END EVENT.
